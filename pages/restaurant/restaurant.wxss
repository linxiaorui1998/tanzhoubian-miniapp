/* pages/restaurant/restaurant.wxss */
page {
    background-color: #f5f5f5;
}
.top-image {
    width: 100%;
    z-index: -1;
    filter:blur(8px);
    background-size:150% 150%;
}
.content {
    position: absolute;
    top: 200rpx;
    width: 93%;
    left: 3.5%;
    background-color: #fff;
    /* height: 400rpx; */
    box-sizing: border-box;
    padding: 20rpx;
    padding-bottom: 40rpx;
    overflow: hidden;
}
h2 {
    font-size: 48rpx;
    font-weight: 600;
}
.lian {
    color: #ffffff;
    font-size: 12px;
    padding: 6rpx;
    margin-left: 10px;
    background-color: #fd9803;
}
.icon-xingxing {
    color: red;
}
.image-list {
    height: 200rpx;
    width: 400%;
    margin-top: 20rpx;
}
.image-item {
    display: inline-block;
    width: 400rpx;
    height: 100%;
    margin-right: 10rpx;
    /* width: auto; */
}
.icon-arrow-right-copy {
    color: #ffffff;
    font-size: 24px;
    /* font-weight: 600; */
    position: fixed;
    top: 30px;
    left: 10px;
}
.giude {
    margin: 10px 0;
    color: #fc4d08;
    background-color: #fef3e9;
    font-size: 12px;
    display: inline-block;
    box-sizing: border-box;
    padding: 10rpx;
}
.time {
    font-size: 12px;
}
.address {
    margin-top: 10px;
    width: 100%;
    font-size: 12px;
}
.p {
    display: block;
    text-align:center;
    font-size: 24px;
}
.address  text {
    font-size: 12px;
    display: block;
    text-align:center;
}
.tab {
    position: absolute;
    top: 430px;
    width: 100%;
}
.tab-item {
    width: 96%;
    margin:0 auto;
    background-color: #ffffff;
    margin-top: 10px;
    box-sizing: border-box;
    padding: 5px;
}
.tab-item image {
    width: 50%;
    border-radius: 5px;
}
.tab-item view {
    width: 47%;
    float: right;
}
.message {
    position: relative;
}
.message p:first-child {
    font-size:16px;
    font-weight:700;
    display: block;
}
.message p:nth-child(2) {
    font-size:12px;
    display: block;
    color: #888282;
    margin-top: 3px;
}
.support {
    width: 40px;
    height: 40px;
    border-radius: 50%;
    /* background-color: red; */
    position: absolute;
    top: 20px;
    right: 10px;
    text-align: center;
    /* line-height: 40px; */
    border: 1px solid black;
}
.supported {
    width: 40px;
    height: 40px;
    border-radius: 50%;
    background-color: red;
    transform: scale(1.1);
    position: absolute;
    top: 20px;
    right: 10px;
    text-align: center;
    line-height: 40px;
    /* border: 1px solid black; */
}
.support :nth-child(2) {
    display: block;
    font-size: 12px;
}