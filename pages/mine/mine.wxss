.head {
  padding: 50rpx;
  width: 100%;
  height: 230rpx;
  box-sizing: border-box;
  /* background-color: red; */
}
.head-image {
  width: 130rpx;
  height: 130rpx;
  border-radius: 50%;
  margin-right: 20rpx;
  float: left;
}
.image1 {
  font-size: 60px;
  border-radius: 50%;
  margin-right: 20rpx;
  float: left;
}
.head-text {
    display: inline-block;
    margin-top: 40rpx;
}
.order {
  width: 90%;
  margin: 0 auto;
  background-color: #fff;
  height: 300rpx;
  padding: 20rpx;
  /* background-color: red; */
  box-sizing: border-box;
  border-radius: 40rpx;
}
.order-head text:nth-child(2) {
  float: right;
  color: #babcbb;
  font-size: 12px;
}
.order-head {
  height: 80rpx;
  line-height: 80rpx;
  border-bottom: 1px solid #babcbb;
}
.icon-list {
  width: 100%;
  height: 180rpx;
  display: flex;
  /* background-color: red; */
}
.order-icon {
  flex: 1;
  text-align: center;
  margin-top: 40rpx;
}
.order-icon .iconfont {
 width: 100%;
 font-size: 28px;
 /* height: 50%; */
}
.order-icon view{
  font-size: 12px;
  margin-top: 10px;
  color: #c8c8c8;
}
.box {
  width: 90%;
  height: 400rpx;
  background-color: #fff;
  margin: 20rpx auto 0;
  border-radius: 40rpx;
}
.box-item {
  height: 100rpx;
  line-height: 100rpx;
  box-sizing: border-box;
  padding-left: 20rpx;
  /* border-bottom: 1px solid black; */
}
.box-item .icon {
  font-size: 40rpx;
  margin-right: 20rpx;
}
.box-item icon:nth-child(2),.box-item text {
  float: right;
  color: #babcbb;
  font-size: 14px;
}
