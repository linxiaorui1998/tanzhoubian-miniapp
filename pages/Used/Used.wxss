    flex: 4;
    background-color: #fff;
  }
  .content {
      flex: 3;
      margin-left: 20rpx;
  }
  .image1 {
    height: 100%;
    width: 100rpx;
    border-radius:10px;
  }
  .icon-xingxing {
    color: #f2cb51;
    
  }
  .content1 {
    display: flex;
    width: 100%;
    height: 200rpx;
    box-sizing: border-box;
  }
  .content-image{
    width: 260rpx;
    height: 100%;
    border-radius: 20px;
  }
  .content-text{
    margin-top: -100rpx;
  }
  .button {
    background-color: transparent;
    border:1px solid #a39786;
    width: 180rpx!important;
    padding-left: 0;
    padding-right: 0;
    margin:0!important;
    margin-top:20rpx!important;
    line-height:inherit; 
    float: right;
  }
  .header-text{
    margin-bottom: 10rpx;
    white-space: nowrap;
      overflow-x: hidden;
    text-overflow: ellipsis;
  }
