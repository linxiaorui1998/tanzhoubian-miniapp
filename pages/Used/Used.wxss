  }
  .restaurant-item {
    padding: 10rpx;
    box-sizing: border-box;
    width: 100%;
    background-color: #fff;
    margin-bottom: 20rpx;
  }
  .header {
    display: flex;
    width: 100%;
    height: 120rpx;
    padding: 10rpx;
    box-sizing: border-box;
    overflow: hidden;
  }
  .image {
    flex: 1;
    height: 100%;
  }
