/* pages/city/city.wxss */
.input {
   width: 90%;
   padding: 10rpx 0;
   box-sizing: border-box;
   background-color: red;
   margin: 0 auto;
   margin-bottom: 20rpx;
   text-align: center;
   font-size: 26rpx;
   border-radius:30rpx;
   background: rgba(240,240,240,0.8);
}
.title {
    background: rgba(240,240,240,0.3);
    padding: 14rpx 30rpx;
    box-sizing: border-box;
    font-size: 24rpx;
    color: #807c7c;
}
.nowCity {
    position: relative;
    height: 140rpx;
    /* background-color: red; */
    padding: 0 30rpx;
}
.nowCityName {
    position: absolute;
    top: 50%;
    transform: translateY(-50%);
    display: inline-block;
    padding: 15rpx 80rpx;
    background-color: #f0f0f0;
    font-size: 28rpx;
    /* font-size: 28rpx; */
}
.hotCity {
    display: flex;
    flex-wrap: wrap;
    padding: 30rpx 0 30rpx 30rpx;
    box-sizing: border-box;
    width: 98%;
}
.hotCityName {
    flex: 0 0 33%;
    display: inline-block;
    margin-bottom: 20rpx;
    text-align: center;
    background-color: #fff;
    font-size: 28rpx;
}
.name {
    width: 90%;
    height: 100%;
    padding: 15rpx 0;
    box-sizing: border-box;
    background-color: #f0f0f0;
}
.allCityItem {
    padding: 30rpx;
    box-sizing: border-box;
    border-bottom: 1px solid #f0f0f0;
}
.english {
    position: fixed;
    right: 0;
    top: 200rpx;
    width: 40rpx;
    text-align: center;
    font-size: 28rpx;
}