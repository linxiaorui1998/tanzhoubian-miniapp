.input {
    background-color: #f7f7f7; 
    width: 90%;
    height: 70rpx;
    border-radius: 30rpx;
    margin: 0 auto ;
    padding-left: 40px;
    box-sizing: border-box;
    color: black;
  }
  .box {
    margin:20px 0;
    position: relative;
  }
  .item {
      padding: 5px 10px;
      box-sizing: border-box;
      background-color: #f7f7f7;
      margin: 10px;
      border-radius: 15px;
      font-size: 13px;
  }
  .icon-iconfonticonfontsousuo1 {
      position: absolute;
      left: 30px;
      top: 10px;
      font-size: 20px;
      color: black;
  }
  .restaurant-item {
    width: 100%;
    display: flex;
    margin-bottom: 10rpx;
    background-color: #ffffff;
    box-sizing: border-box;
    padding: 20rpx 0;
  }
  .restaurant .img {
    flex: 1;
    height: 160rpx;
    border-radius: 20rpx;
    
  }
  .content {
    flex: 3;
    /* background-color: red; */
    margin-left: 20rpx;
  }
  .icon-xingxing {
    color: #f2cb51;
  }
  .content-title {
    font-size: 18px;
    font-weight: 550;
  }
  .content-guide {
    background-color: #fffadd;
    font-size: 12px;
    color: #facf67;
    padding: 1px 3px;
    border-radius: 5px;
  }
  