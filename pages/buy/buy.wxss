/* pages/buy/buy.wxss */.time {
  width: 100%;
  height: auto;
  overflow: hidden;
}
.hot {
  width: 100%;
  height: 400rpx;
  margin-bottom: 20rpx;
  /* background-color: red; */
}
.title {
  font-weight: 700;
  font-size: 18px;
  margin-left: 20rpx;
  margin-bottom: 20rpx;
  padding-left: 20rpx;
}
.hot-item {
  margin-top: 20rpx;
  width: 33%;
  float: left;
  text-align: center;
}
.hot-item image {
  border-radius: 50%;
  height: 100rpx;
  width: 100rpx;
  display: inline-block;
}
.time-item {
  width: 50%;
  float: left;
  text-align: center;
}
.time-item image {
  width: 90%;
  height: 200rpx;
  border-radius: 30rpx;
}
.near {
  padding:20rpx;
}
.near-item {
  flex: 1;
  text-align: center;
  font-size: 12px;
  /* color: #cccccc; */
}
.near-item2 {
  flex: 1;
  text-align: center;
  font-size: 14px;
  background-color: #f6f7fb;
  border-radius: 20rpx;
  margin: 0 10rpx;
  padding: 20rpx;
}
.restaurant {
  width: 100%;
  margin-top: 20rpx;
  /* background-color: red; */
}
.restaurant-item {
  width: 100%;
  display: flex;
  margin-bottom: 40rpx;
}
.restaurant .img {
  flex: 1;
  height: 160rpx;
  border-radius: 20rpx;
  
}
.content {
  flex: 3;
  /* background-color: red; */
  margin-left: 20rpx;
}
.icon-xingxing {
  color: #f2cb51;
  
}
.content-title {
  font-size: 18px;
  font-weight: 550;
}
.content-guide {
  background-color: #fffadd;
  font-size: 12px;
  color: #facf67;
  padding: 1px 3px;
  border-radius: 5px;
}