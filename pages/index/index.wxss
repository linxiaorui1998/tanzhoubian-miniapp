.head {
  display: flex;
  height: 80rpx;
  width: 100%;
  text-align: center;
  line-height: 80rpx;
  background-color: white;
}
.city {
    flex: 1;
    background-color: #e5443c;
}
.search {
  flex: 4;
  box-sizing: border-box;
  padding-top: 5rpx;
  background-color: #e5443c;
}
.input {
  background-color: #ee7b79; 
  width: 98%;
  height: 70rpx;
  border-radius: 30rpx;
  margin: 0 auto ;
  color: #fff;
}
.swiper {
  width: 100%;
  height: 280rpx;
  background-color: #e5443c;
  box-sizing: border-box;
  padding-top: 30rpx;
  /* background-color: black; */
}
.swiper-img {
  width: 100%;
  height: 250rpx;
}
.icon-list {
   width: 100%;
   height: 320rpx;
   padding-top: 20rpx;
   /* background-color: red; */
}
.icon-item {
  width: 25%;
  float: left;
  text-align: center;
  margin: 10rpx 0;
}
.icon-item .icon {
   font-size: 70rpx;
   display: block;
   color: #e5443c;
}
.time {
  width: 100%;
  height: 600rpx;
  /* background-color:red; */
}
.hot {
  width: 100%;
  height: 400rpx;
  margin-bottom: 20rpx;
  /* background-color: red; */
}
.title {
  font-weight: 700;
  font-size: 18px;
  margin-left: 20rpx;
  margin-bottom: 20rpx;
  padding-left: 20rpx;
}
.hot-item {
  margin-top: 20rpx;
  width: 33%;
  float: left;
  text-align: center;
}
.hot-item image {
  border-radius: 50%;
  height: 100rpx;
  width: 100rpx;
  display: inline-block;
}
.time-item {
  width: 50%;
  float: left;
  text-align: center;
}
.time-item image {
  width: 90%;
  height: 200rpx;
  border-radius: 30rpx;
}
.near {
  padding:20rpx;
}
.near-item {
  flex: 1;
  text-align: center;
  font-size: 12px;
  /* color: #cccccc; */
}
.near-item2 {
  flex: 1;
  text-align: center;
  font-size: 14px;
  background-color: #f6f7fb;
  border-radius: 20rpx;
  margin: 0 10rpx;
  padding: 20rpx;
}
.restaurant {
  width: 100%;
  margin-top: 20rpx;
  /* background-color: red; */
}
.restaurant-item {
  width: 100%;
  display: flex;
  margin-bottom: 40rpx;
}
.restaurant .img {
  flex: 1;
  height: 160rpx;
  border-radius: 20rpx;
  
}
.content {
  flex: 3;
  /* background-color: red; */
  margin-left: 20rpx;
}
.icon-xingxing {
  color: #f2cb51;
  
}
.content-title {
  font-size: 18px;
  font-weight: 550;
}
.content-guide {
  background-color: #fffadd;
  font-size: 12px;
  color: #facf67;
  padding: 1px 3px;
  border-radius: 5px;
}